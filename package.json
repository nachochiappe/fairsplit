{
  "name": "fairsplit",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "prebuild": "pnpm --filter @fairsplit/db prisma:generate",
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "db:migrate": "pnpm --filter @fairsplit/db prisma:migrate",
    "db:generate": "pnpm --filter @fairsplit/db prisma:generate"
  },
  "devDependencies": {
    "prettier": "^3.5.1",
    "typescript": "^5.7.3"
  }
}
